{{#each formContent as |item|}}
  {{#if item.instruction}} 
    {{generic-bar content=item.instruction}}
  {{/if}}
  {{#if item.personalAnnualIncome}}
    {{form-field field=item.personalAnnualIncome}}
    <label>{{validation.personalAnnualIncomeValid}}</label>
  {{/if}}
  {{#if item.name}}
    {{form-field field=item.name}}
  {{/if}}
  {{#if item.help}}
  {{#conditional-display isDisplaying=offerData.toggle}}
    {{generic-bar content=item.help}}
  {{/conditional-display}}
  {{/if}}
{{/each}}



